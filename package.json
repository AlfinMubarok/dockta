{
  "name": "@stencila/dockter",
  "version": "0.1.0",
  "description": "A compiler for JSON-LD `SoftwareEnvironment` and `SoftwareSourceCode` nodes targetting Docker",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dockter": "./dist/cli.js"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json --fix --format stylish ./src/**/*.ts",
    "test": "jest",
    "cover": "jest --collectCoverage",
    "build": "npm run build-dist && npm run build-bins",
    "build-dist": "tsc",
    "build-bins": "pkg --out-path=build .",
    "docs": "markdown-toc -i --maxdepth=4 README.md && typedoc --readme README.md --out ./docs ./src",
    "cli": "ts-node src/cli.ts",
    "server": "ts-node src/server.ts",
    "start": "node ./dist/server.js",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/dockter.git"
  },
  "keywords": [
    "JSON-LD",
    "SoftwareEnvironment",
    "SoftwareSourceCode",
    "Docker",
    "compiler"
  ],
  "author": "Contributors (https://github.com/stencila/dockter/contributors)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/dockter/issues"
  },
  "homepage": "https://github.com/stencila/dockter#readme",
  "devDependencies": {
    "@types/dockerode": "^2.5.5",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.3",
    "@types/js-yaml": "^3.11.2",
    "@types/request": "^2.47.1",
    "@types/tar-fs": "^1.16.1",
    "@types/tar-stream": "^1.6.0",
    "@types/tmp": "0.0.33",
    "@types/yargs": "^12.0.1",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.6.0",
    "markdown-toc": "^1.2.0",
    "pkg": "^4.3.4",
    "ts-jest": "^23.10.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "cached-request": "^1.1.4",
    "docker-file-parser": "^1.0.4",
    "dockerode": "^2.5.7",
    "express": "^4.16.3",
    "fast-glob": "^2.2.3",
    "js-yaml": "^3.12.0",
    "request": "^2.88.0",
    "tar-fs": "^1.16.3",
    "tar-stream": "^1.6.2",
    "tmp": "0.0.33",
    "yargonaut": "^1.1.4",
    "yargs": "^12.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
