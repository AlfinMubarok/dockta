{
  "name": "@stencila/node-docker",
  "version": "1.0.0",
  "description": "A compiler for JSON-LD `SoftwareEnvironment` and `SoftwareSourceCode` nodes targetting Docker",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "node-docker": "./dist/cli.js"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json --fix --format stylish ./src/**/*.ts",
    "test": "jest",
    "cover": "jest --collectCoverage",
    "build": "tsc",
    "docs": "typedoc --readme README.md --out ./docs ./src",
    "cli": "ts-node src/cli.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/node-docker.git"
  },
  "keywords": [
    "JSON-LD",
    "SoftwareEnvironment",
    "SoftwareSourceCode",
    "Docker",
    "compiler"
  ],
  "author": "Contributors (https://github.com/stencila/node-docker/contributors)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/node-docker/issues"
  },
  "homepage": "https://github.com/stencila/node-docker#readme",
  "devDependencies": {
    "@types/dockerode": "^2.5.5",
    "@types/jest": "^23.3.3",
    "@types/tmp": "0.0.33",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.12.0",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "docker-file-parser": "^1.0.4",
    "dockerode": "^2.5.7",
    "js-yaml": "^3.12.0",
    "tmp": "0.0.33",
    "yargs": "^12.0.2"
  }
}
