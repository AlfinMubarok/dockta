{
  "name": "@stencila/dockta",
  "version": "0.16.7",
  "description": "A Docker image builder for researchers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "src/install.R"
  ],
  "scripts": {
    "lint": "eslint --fix 'src/**/*.{js,ts}'",
    "format": "prettier --write '**/*.{js,json,md,ts,yaml}'",
    "test": "jest",
    "test:cover": "jest --collectCoverage",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "build": "tsc && cp ./src/*.json dist",
    "docs": "markdown-toc -i --maxdepth=4 README.md && typedoc --readme README.md --mode file --out ./docs ./src",
    "cli": "ts-node src/cli.ts",
    "server": "ts-node src/server.ts",
    "start": "node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stencila/dockta.git"
  },
  "keywords": [
    "Docker",
    "Dockerfile",
    "JSON-LD",
    "research",
    "reproducibility"
  ],
  "author": "Dockta contributors (https://github.com/stencila/dockta/contributors)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/dockta/issues"
  },
  "homepage": "https://github.com/stencila/dockta#readme",
  "devDependencies": {
    "@stencila/dev-config": "1.4.66",
    "@types/dockerode": "2.5.34",
    "@types/express": "4.17.7",
    "@types/got": "9.6.11",
    "@types/jest": "26.0.10",
    "@types/js-yaml": "3.12.5",
    "@types/node": "13.13.15",
    "@types/node-persist": "3.1.0",
    "@types/semver": "7.3.3",
    "@types/tar-fs": "2.0.0",
    "@types/tmp": "0.2.0",
    "@types/yargs": "15.0.5",
    "all-contributors-cli": "6.17.2",
    "jest": "26.4.2",
    "markdown-toc": "1.2.0",
    "ts-jest": "26.2.0",
    "ts-node": "8.10.2",
    "typedoc": "0.18.0",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "@stencila/logga": "2.2.0",
    "@stencila/schema": "0.2.4",
    "builtin-modules": "^3.1.0",
    "detective": "^5.2.0",
    "docker-file-parser": "^1.0.4",
    "dockerode": "^3.2.0",
    "express": "^4.17.1",
    "fast-glob": "^3.2.2",
    "got": "^9.6.0",
    "js-yaml": "^3.14.0",
    "ndjson": "^1.5.0",
    "node-persist": "^3.1.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.2",
    "tar-fs": "^2.1.0",
    "tmp": "0.2.1",
    "yargonaut": "^1.1.4",
    "yargs": "^15.3.1"
  },
  "release": {
    "extends": "@stencila/semantic-release-config"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config",
    "rules": {
      "@typescript-eslint/prefer-regexp-exec": 1,
      "@typescript-eslint/require-await": 1,
      "@typescript-eslint/restrict-plus-operands": 1,
      "@typescript-eslint/strict-boolean-expressions": 1,
      "@typescript-eslint/unbound-method": 1
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "coveragePathIgnorePatterns": [
      "tests/MockUrlFetcher.ts",
      "tests/test-functions.ts"
    ]
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "renovate": {
    "extends": [
      "@stencila"
    ]
  }
}
