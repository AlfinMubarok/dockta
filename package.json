{
  "name": "@stencila/docker-compiler",
  "version": "1.0.0",
  "description": "A compiler for JSON-LD `SoftwareSourceCode` nodes with `programmingLanguage` equal to \"Dockerfile\"",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint --project tsconfig.json --fix --format stylish ./src/**/*.ts",
    "test": "jest",
    "cover": "jest --collectCoverage",
    "build": "tsc",
    "docs": "typedoc --readme README.md --out ./docs ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/docker-compiler.git"
  },
  "keywords": [
    "JSON-LD",
    "SoftwareSourceCode",
    "Docker",
    "compiler"
  ],
  "author": "Contributors (https://github.com/stencila/docker-compiler/contributors)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/docker-compiler/issues"
  },
  "homepage": "https://github.com/stencila/docker-compiler#readme",
  "devDependencies": {
    "@types/jest": "^23.3.3",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.3",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.12.0",
    "typescript": "^3.1.1"
  }
}
